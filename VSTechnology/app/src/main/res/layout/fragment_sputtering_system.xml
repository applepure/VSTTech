<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_home_paje"
    tools:context="com.example.annakostova.vstechnology.fragment.FragmentSputteringSystem">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"

        android:layout_height="wrap_content"
        android:src="@drawable/sputtering" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Sputtering System"
        android:layout_marginTop="30dp"
        android:textSize="32sp"
        android:layout_gravity="center_horizontal|top" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_marginTop="300sp"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/person_photo"
                    android:src="@drawable/spu2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_name"
                    android:layout_toRightOf="@+id/person_photo"
                    android:layout_alignParentTop="true"
                    android:text="TFSP- 840"
                    android:textSize="30sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_age"
                    android:layout_toRightOf="@+id/person_photo"
                    android:text="@string/system1"
                    android:textSize="6sp"
                    android:layout_below="@+id/person_name"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv2"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/person_photo2"
                    android:src="@drawable/system2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_name2"
                    android:layout_toRightOf="@+id/person_photo2"
                    android:layout_alignParentTop="true"
                    android:text="TFSP-995"
                    android:textSize="30sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_age2"
                    android:layout_toRightOf="@+id/person_photo2"
                    android:text="@string/system2"
                    android:textSize="8sp"
                    android:layout_below="@+id/person_name2"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/system3"
        android:textSize="8sp"
        android:layout_margin="5sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>
